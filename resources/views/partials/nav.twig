<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <a class="my-0 mr-md-auto heading" href="{{ base_url() }}">Slim Authentication</a>
    <nav class="my-2 my-md-0 mr-md-3">
        {#<a class="p-2 text-dark" href="#"></a>#}
    </nav>
    {% if auth.check %}
        <span>Welcome, {{ auth.user.name }} !</span> &nbsp; &nbsp;
        <a class="btn btn-outline-primary" href="{{ path_for('home') }}">Change Password</a> &nbsp;&nbsp;
        <a class="btn btn-outline-primary" href="{{ path_for('auth.signout') }}">Sign out</a>
    {% else %}
        <a class="btn btn-outline-success" href="{{ path_for('auth.signup') }}">Sign up</a> &nbsp;&nbsp;
        <a class="btn btn-outline-primary" href="{{ path_for('auth.signin') }}">Sign in</a>
    {% endif %}
</div>