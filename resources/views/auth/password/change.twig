{% extends 'layouts/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <div class="panel">
                <div class="panel-heading">
                    <h2>Change Password</h2>
                </div>
                <hr>

                <div class="panel-body">

                    <form action="{{ path_for('auth.changePwd') }}" method="POST" autocomplete="off">

                        <div class="form-group {{ errors.password_old ? 'has-error' : '' }}">
                            <label for="password_old">Current password</label>
                            <input type="password_old" class="form-control" id="password_old" name="password_old" placeholder="********">
                            {% if errors.password_old %}
                                <span class="form-helper-text text-muted">{{ errors.password_old | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                            <label for="password">New password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="********">
                            {% if errors.password %}
                                <span class="form-helper-text text-muted">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-outline-primary" value="Change password">
                        </div>

                        {{ csrf.field | raw }}
                    </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
