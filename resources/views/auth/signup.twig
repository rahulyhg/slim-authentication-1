{% extends 'layouts/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <div class="panel">
                <div class="panel-heading">
                    <h2>Sign up</h2>
                </div>
                <hr>

                <div class="panel-body">

                    <form action="{{ path_for('auth.signup') }}" method="POST" autocomplete="off">
                        <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="you@domain.com" value="{{ old.email ?? '' }}">
                            {% if errors.email %}
                                <span class="form-helper-text text-muted">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Your name" value="{{ old.name ?? '' }}">
                            {% if errors.name %}
                                <span class="form-helper-text text-muted">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="********">
                            {% if errors.password %}
                                <span class="form-helper-text text-muted">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-outline-primary" value="Sign up">
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
